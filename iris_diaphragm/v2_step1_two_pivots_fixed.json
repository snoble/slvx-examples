{
  "schema": "slvs-json/1",
  "units": "mm",
  "entities": [
    {
      "type": "point",
      "id": "center",
      "at": [0, 0, 0]
    },
    {
      "type": "point",
      "id": "ref",
      "at": [1, 0, 0]
    },
    {
      "type": "point",
      "id": "pivot1",
      "at": [1, 1, 0]
    },
    {
      "type": "point",
      "id": "pivot2",
      "at": [1, 1, 0]
    },
    {
      "type": "line",
      "id": "ref_line",
      "p1": "center",
      "p2": "ref"
    },
    {
      "type": "line",
      "id": "spoke1",
      "p1": "center",
      "p2": "pivot1"
    },
    {
      "type": "line",
      "id": "spoke2",
      "p1": "center",
      "p2": "pivot2"
    }
  ],
  "constraints": [
    {
      "type": "fixed",
      "entity": "center"
    },
    {
      "type": "horizontal",
      "a": "ref_line"
    },
    {
      "type": "distance",
      "between": ["center", "ref"],
      "value": 100
    },
    {
      "type": "distance",
      "between": ["center", "pivot1"],
      "value": 100
    },
    {
      "type": "distance",
      "between": ["center", "pivot2"],
      "value": 100
    },
    {
      "type": "angle",
      "between": ["ref_line", "spoke1"],
      "value": 0
    },
    {
      "type": "angle",
      "between": ["spoke1", "spoke2"],
      "value": 60
    }
  ]
}