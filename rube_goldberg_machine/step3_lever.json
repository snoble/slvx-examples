{
  "schema": "slvs-json/1",
  "units": "mm",
  "parameters": {
    "marble_radius": 10,
    "ramp_angle": 30,
    "ramp_length": 300,
    "table_height": 1000,
    "ramp_start_height": 200,
    "drop_height": 150,
    "catcher_width": 60,
    "lever_length": 200,
    "lever_ratio": 3,
    "lever_height": 800
  },
  "entities": [
    {
      "type": "point",
      "id": "origin",
      "at": [0, 0, 0]
    },
    {
      "type": "point",
      "id": "table_top",
      "at": [0, "$table_height", 0]
    },
    {
      "type": "point",
      "id": "ramp_start",
      "at": [0, "$table_height + $ramp_start_height", 0]
    },
    {
      "type": "point",
      "id": "ramp_end",
      "at": [250, 1050, 0]
    },
    {
      "type": "line",
      "id": "ramp",
      "p1": "ramp_start",
      "p2": "ramp_end"
    },
    {
      "type": "point",
      "id": "horizontal_ref_end",
      "at": [100, "$table_height", 0]
    },
    {
      "type": "line",
      "id": "horizontal_ref",
      "p1": "table_top",
      "p2": "horizontal_ref_end"
    },
    {
      "type": "point",
      "id": "marble_exit",
      "at": [280, 1040, 0]
    },
    {
      "type": "point",
      "id": "catcher_center",
      "at": [350, 850, 0]
    },
    {
      "type": "point",
      "id": "catcher_left",
      "at": [320, 850, 0]
    },
    {
      "type": "point",
      "id": "catcher_right",
      "at": [380, 850, 0]
    },
    {
      "type": "line",
      "id": "catcher",
      "p1": "catcher_left",
      "p2": "catcher_right"
    },
    {
      "type": "point",
      "id": "lever_pivot",
      "at": [350, "$lever_height", 0]
    },
    {
      "type": "point",
      "id": "lever_left",
      "at": [300, 800, 0]
    },
    {
      "type": "point",
      "id": "lever_right",
      "at": [500, 800, 0]
    },
    {
      "type": "line",
      "id": "lever",
      "p1": "lever_left",
      "p2": "lever_right"
    },
    {
      "type": "point",
      "id": "lever_marble_target",
      "at": [320, 810, 0]
    },
    {
      "type": "point",
      "id": "next_trigger",
      "at": [480, 790, 0]
    }
  ],
  "constraints": [
    {
      "type": "fixed",
      "entity": "origin"
    },
    {
      "type": "fixed",
      "entity": "table_top"
    },
    {
      "type": "fixed",
      "entity": "ramp_start"
    },
    {
      "type": "distance",
      "between": ["ramp_start", "ramp_end"],
      "value": "$ramp_length"
    },
    {
      "type": "angle",
      "between": ["horizontal_ref", "ramp"],
      "value": "-$ramp_angle"
    },
    {
      "type": "distance",
      "between": ["ramp_end", "marble_exit"],
      "value": "40"
    },
    {
      "type": "horizontal",
      "entity": "catcher"
    },
    {
      "type": "distance",
      "between": ["catcher_left", "catcher_right"],
      "value": "$catcher_width"
    },
    {
      "type": "distance",
      "between": ["marble_exit", "catcher_center"],
      "value": "$drop_height"
    },
    {
      "type": "coincident",
      "at": "catcher_center",
      "of": ["catcher"]
    },
    {
      "type": "fixed",
      "entity": "lever_pivot"
    },
    {
      "type": "coincident",
      "at": "lever_pivot",
      "of": ["lever"]
    },
    {
      "type": "distance",
      "between": ["lever_left", "lever_right"],
      "value": "$lever_length"
    },
    {
      "type": "coincident",
      "at": "lever_marble_target",
      "of": ["lever"]
    },
    {
      "type": "coincident",
      "at": "next_trigger",
      "of": ["lever"]
    },
    {
      "type": "distance",
      "between": ["catcher_center", "lever_marble_target"],
      "value": "50"
    }
  ]
}