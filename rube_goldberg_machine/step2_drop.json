{
  "schema": "slvs-json/1",
  "units": "mm",
  "parameters": {
    "marble_radius": 10,
    "ramp_angle": 30,
    "ramp_length": 300,
    "table_height": 1000,
    "ramp_start_height": 200,
    "drop_height": 150,
    "catcher_width": 60
  },
  "entities": [
    {
      "type": "point",
      "id": "origin",
      "at": [0, 0, 0]
    },
    {
      "type": "point",
      "id": "table_top",
      "at": [0, "$table_height", 0]
    },
    {
      "type": "point",
      "id": "ramp_start",
      "at": [0, "$table_height + $ramp_start_height", 0]
    },
    {
      "type": "point",
      "id": "ramp_end",
      "at": [250, 1050, 0]
    },
    {
      "type": "line",
      "id": "ramp",
      "p1": "ramp_start",
      "p2": "ramp_end"
    },
    {
      "type": "point",
      "id": "horizontal_ref_end",
      "at": [100, "$table_height", 0]
    },
    {
      "type": "line",
      "id": "horizontal_ref",
      "p1": "table_top",
      "p2": "horizontal_ref_end"
    },
    {
      "type": "point",
      "id": "marble_exit",
      "at": [280, 1040, 0]
    },
    {
      "type": "point",
      "id": "catcher_center",
      "at": [350, 850, 0]
    },
    {
      "type": "point",
      "id": "catcher_left",
      "at": [320, 850, 0]
    },
    {
      "type": "point",
      "id": "catcher_right",
      "at": [380, 850, 0]
    },
    {
      "type": "line",
      "id": "catcher",
      "p1": "catcher_left",
      "p2": "catcher_right"
    },
    {
      "type": "line",
      "id": "drop_path",
      "p1": "marble_exit",
      "p2": "catcher_center"
    },
    {
      "type": "point",
      "id": "vertical_ref_bottom",
      "at": [280, 800, 0]
    },
    {
      "type": "line",
      "id": "vertical_ref",
      "p1": "marble_exit",
      "p2": "vertical_ref_bottom"
    }
  ],
  "constraints": [
    {
      "type": "fixed",
      "entity": "origin"
    },
    {
      "type": "fixed",
      "entity": "table_top"
    },
    {
      "type": "fixed",
      "entity": "ramp_start"
    },
    {
      "type": "distance",
      "between": ["ramp_start", "ramp_end"],
      "value": "$ramp_length"
    },
    {
      "type": "angle",
      "between": ["horizontal_ref", "ramp"],
      "value": "-$ramp_angle"
    },
    {
      "type": "distance",
      "between": ["ramp_end", "marble_exit"],
      "value": "40"
    },
    {
      "type": "horizontal",
      "entity": "catcher"
    },
    {
      "type": "distance",
      "between": ["catcher_left", "catcher_right"],
      "value": "$catcher_width"
    },
    {
      "type": "distance",
      "between": ["marble_exit", "catcher_center"],
      "value": "$drop_height"
    },
    {
      "type": "vertical",
      "entity": "drop_path"
    },
    {
      "type": "coincident",
      "at": "catcher_center",
      "of": ["catcher"]
    }
  ]
}